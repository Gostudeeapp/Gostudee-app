<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/correctText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mauvaise réponse"
            android:textColor="#E5282F"
            android:gravity="center"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/correctAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSaumon"
            android:text="Vrai réponse"
            android:gravity="center"
            android:textSize="26sp"/>
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="40dp"></View>
    <Button
        android:id="@+id/dialogNext"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="Suivant"
        android:textSize="30sp"
        android:background="#E5282F"
        android:textColor="@color/colorWhite"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"></View>
</LinearLayout>